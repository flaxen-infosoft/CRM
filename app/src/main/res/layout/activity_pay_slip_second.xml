<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaySlipSecondActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/slip_holder_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Slip Holder Name"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/basic"
            android:layout_below="@+id/slip_holder_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Basic"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hra"
            android:layout_below="@+id/basic"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="HRA"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/other_allowance"
            android:layout_below="@+id/hra"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Other Allowance"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/convenyance_allowance"
            android:layout_below="@+id/other_allowance"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Convenyance Allowance"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bonus"
            android:layout_below="@+id/convenyance_allowance"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Bonus"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/re_location_allowance"
            android:layout_below="@+id/bonus"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Re-Location Allowance"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pf_cotibution"
            android:layout_below="@+id/re_location_allowance"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="PF Contribution"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/esic_contribution"
            android:layout_below="@+id/pf_cotibution"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="ESIC Contribution"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/prof_tax"
            android:layout_below="@+id/esic_contribution"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Prof Tax"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/slip_submit"
            android:layout_below="@+id/prof_tax"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            android:text="Submit"
            app:backgroundTint="@color/purple_200"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>

    </RelativeLayout>

</ScrollView>