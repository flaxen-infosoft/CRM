<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaySlipFormActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Employee_id"
            android:hint="Select Employee"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Employee_name"
            android:layout_below="@+id/Employee_id"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Employee Name"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/department"
            android:layout_below="@+id/Employee_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Department / Location"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/designation"
            android:layout_below="@+id/department"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Degignation"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/salary_month"
            android:layout_below="@+id/designation"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Select Month"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/payable_days"
            android:layout_below="@+id/salary_month"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Payable Days"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/aadharcard_number"
            android:layout_below="@+id/payable_days"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Addhar Card Number"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pancard_number"
            android:layout_below="@+id/aadharcard_number"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Pan Card Number"
            android:background="@drawable/edittext_bg"
            android:padding="25dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pay_roll_area"
            android:layout_below="@+id/pancard_number"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Pay Roll Area"
            android:background="@drawable/edittext_bg"
            android:padding="25dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pf_number"
            android:layout_below="@+id/pay_roll_area"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="PF Number"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/esic_number"
            android:layout_below="@+id/pf_number"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="ESIC Number"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/uan_number"
            android:layout_below="@+id/esic_number"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="UAN Number"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/account_number"
            android:layout_below="@+id/uan_number"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Account Number"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>


        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bank_name"
            android:layout_below="@+id/account_number"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:hint="Select Bank Name"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:layout_below="@+id/bank_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="50dp"
            android:text="Submit"
            app:backgroundTint="@color/purple_200"
            android:background="@drawable/edittext_bg"
            android:padding="15dp"
            android:elevation="6dp"/>

    </RelativeLayout>

</ScrollView>